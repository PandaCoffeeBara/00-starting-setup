# Environment and App configuration
NODE_ENV=development # Node environment
PORT=3000 # Port to run the app on

# SECURITY
JWT_SECRET='your_jwt_secret_here' # JWT secret for token generation
SESSION_SECRET='your_sesson_secret_here' # Session secret for session management
API_KEY='your_api_key_here' # API key for API access
CORS_ORIGIN='http://localhost:3000' # CORS origin for API access

DATABASE_URL='your_database_url_here' # Database URL for database connection
REDIS_URL='your_redis_url_here' # Redis URL for session store

# React specifics
REACT_APP_API_URL='http://localhost:3000' # API URL for React app

# Google Analytics
REACT_APP_GA_TRACKING_ID='your_ga_tracking_id_here' # Google Analytics tracking ID

# Logging and monitoring
LOG_LEVEL='info' # Log level for the app
LOG_DIR='var/logs/' # Log directory for the app
REACT_APP_SENTRY_DSN='https://your_sentry_dsn_here' # Sentry DSN for React app
SENTRY_DSN='https://your_sentry_dsn_here' # Sentry DSN, grab from Sentry project settings
